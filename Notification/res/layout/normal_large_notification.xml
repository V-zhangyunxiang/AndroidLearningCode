<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送一条普通通知" />

    <Button
        android:id="@+id/button_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendLargeNotifi"
        android:text="发送一条大视图通知" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendProgressNotifi"
        android:text="发送一个进度条通知" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendDiyNotifi"
        android:text="发送一个自定义通知" />

</LinearLayout>
